extends layout.pug

block content
  if error
    p #{error}
  form(action='/signup' method='post')
    p Email: 
      input(type='text' name='email')
    p Password: 
      input(type='password' name='password')
    p Password Confirmation: 
      input(type='password' name='password-confirmation')
    p
      button(type='submit') Sign Up
